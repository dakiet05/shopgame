
@model List<xuonggame.Models.Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/product.css">
<section class="product spad">
    <div class="container">
        <div class="row">

            <div class="col-lg-9 col-md-7">
                <div class="product__discount" style="padding-bottom: 15px;">
                    <div class="section-title product__discount__title" style="margin-bottom: 0px; ">
                        <h4>Sản Phẩm</h4>
                    </div>
                </div>
                <div class="filter__item">
                    <div class="row">
                        @if (Model != null && Model.Any())
                        {

                            foreach (var item in Model)
                            {
                                <div class="col-xl-3" style="margin-bottom:20px;">
                                    <div class="panel panel-info">
                                        <div class="panel-body"><a href="@Url.Action("Details","Product", new { Id = item.ProId })"><img src="~/images/@item.ProImage" class="img-responsive" style="width:100%" alt="Image"></a></div>
                                        <div style="padding:5px 10px; font-size:14px;">
                                            <div style="line-height: 1.5; font-size: 15px; min-height: 44px; color: black; font-family: 'Nunito-Bold'; text-overflow: ellipsis; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">@Html.ActionLink(item.ProName, "Details", "Product", new { id = @item.ProId }, null)</div>
                                            <div style="font-weight:700; font-size:15px">$@item.ProPrice</div>
                                            <p>@Html.ActionLink("Add To Cart", "OrderNow", "ShoppingCart", new { Id = item.ProId }, null)</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {

                            <div class="row">
                                <p style="padding-left:30px">Không tìm thấy sản phẩm</p>
                            </div>

                        }
                    </div>
                </div>
                <div class="product__pagination">
                    <a href="#">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                </div>
            </div>
        </div>
    </div>
</section>
