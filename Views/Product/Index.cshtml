@model IEnumerable<xuonggame.Models.Product_Category>
@{
    ViewBag.Title = "Index";
}

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".Action">Action</li>
                        <li data-filter=".Adventure">Adventure</li>
                        <li data-filter=".Role-playing">Role-playing</li>
                        <li data-filter=".Simulation">Simulation</li>
                        <li data-filter=".Strategy">Strategy</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges @item.CatName">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@item.ProImage">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="@Url.Action("Index", "GameDetail", new { id = item.CatId })"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6>
                                @*@Html.ActionLink(item.ProName, "Index", "GameDetail", new { id = item.CatId }, null)*@
                                <a href="@Url.Action("Index", "GameDetail", new { id = item.CatId })">@item.ProName</a>
                            </h6>
                            <h5>$@item.ProPrice</h5>
                        </div>
                    </div>
                </div>
            }

        </div>
        <nav aria-label="Page navigation example" style="display: block">
            <ul class="pagination" style="margin: auto 40%">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>

    </div>
</section>

